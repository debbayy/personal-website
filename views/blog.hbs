<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Creating Blog Page</title>
    <link rel="stylesheet" href="/public/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/public/style.css" />
  </head>
  <body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-nav">
        <a class="navbar-brand" href="#">
          <img src="/public/assets/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse d-flex align-middle"
          id="navbarSupportedContent"
        >
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active text-orange"
                aria-current="page"
                href="add-blog"
              >Blog</a>
            </li>
          </ul>
          <ul>
          <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/register"
              >Register</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active text-orange"
                aria-current="page"
                href="/login"
              >Login</a>
            </li>
          </ul>

          <a class="btn text-white px-4 bg-orange" href="contact">Contact Me</a>
        </div>
      </div>
    </nav>
    {{#if messages.success}}
    <div class="alert alert-success" role="alert">
          {{messages.success}}
    </div>
    {{/if}}

    <!-- dynamic content would be here -->

    <div class="blog">
      <div class="add-new-blog">
        {{#if isLogin}}
          <a href="add-blog">
            Add New Blog
          </a>
        {{/if}}
      </div>
      <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->
        {{#each blogs}}
          <div class="blog-list-item">
            <div class="blog-image">
              <img src="/public/assets/blog-img.png" alt="" />
            </div>

            <div class="blog-content">
              {{#if this.isLogin}}
                <div class="btn-group">
                  <a class="btn-edit">Edit Post</a>
                  <a href="/delete-blog/{{@index}}" class="btn-post">Delete Blog</a>
                </div>
              {{/if}}

              <h1>
                <a href="/detail-blog/7" target="_blank">{{this.title}}</a>
              </h1>
              <div class="detail-blog-content">
                {{this.post_at}}|{{this.author}}

              </div>
              <p>{{this.content}}</p>
              <div
                style="text-align: right; margin-top: 20px; font-size: 15px; color:grey"
              >
                1 Hour Ago
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    {{! <script src="blog.js"></script> }}
  </body>
</html>