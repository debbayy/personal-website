<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/public/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/public/style.css" />
  </head>
  <body>
    <!-- NavBar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-nav">
        <a class="navbar-brand" href="#">
          <img src="/public/assets/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse d-flex align-middle"
          id="navbarSupportedContent"
        >
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active text-orange"
                aria-current="page"
                href="add-blog"
              >Blog</a>
            </li>
          </ul>
          <ul>
          <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/register"
              >Register</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active text-orange"
                aria-current="page"
                href="/login"
              >Login</a>
            </li>
          </ul>

          <a class="btn text-white px-4 bg-orange" href="contact">Contact Me</a>
        </div>
      </div>
    </nav>
    {{#if messages.danger}}
    <div class="alert alert-danger" role="alert">
          {{messages.danger}}
    </div>
    {{/if}}

    <div
      class="container-fluid d-flex align-items-center justify-content-center"
    >
      <div class="container-form">
        <p class="h1 text-center mb-4">Login</p>
        <form action="/blog" method="post">

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" type="email" class="form-control" id="email" />
          </div>
         <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              name="password  "
              type="password"
              class="form-control"
              id="password"
            />
          </div
          <div class="text-end">
            <button type="submit" class="btn text-white bg-orange">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>